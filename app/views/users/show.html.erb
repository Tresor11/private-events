<br>
<div class="row justify-content-center">
<h4>Hey <%=current_user.name%></h4>
</div>
<br>
<br>
<div class="row justify-content-center">
    <div class="col-4">
      <h5>Events you've created:</h5>
        <ul>
            <%@events.each do |x|%>
              <li><%=x.title%></li>
            <%end%>
        </ul>
    </div>
    <div class="col-4">
        <h5>Upcoming Events:</h5>
        <ul>
          <%@upcoming.each do |x|%>
            <li><%=x.title%></li>
          <%end%>
        </ul>
    </div>
    <div class="col-4">
        <h5>Previously attended events:</h5>
        <ul>
          <%@past.each do |x|%>
            <li><%=x.title%></li>
          <%end%>
        </ul>
    </div>
</div>

<br>
<br>

<div class="row">
    <div class="col-12 event-form">
        <h5>Create Event:</h5>
        <%= render  "events/new" %>
    </div>
</div>