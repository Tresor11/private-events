<div class="row">
<div class="col-5 d-flex flex-column m-auto">
<%= form_for(@user) do |f| %>
<%= f.label :name %>
<%= f.text_field :name%>
<%= f.label :email %>
<%= f.email_field :email%>
<%= f.label :password %>
<%= f.password_field :password%>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation%>
<%=f.submit class:"btn btn-primary"%>
<% end %>
</div>
